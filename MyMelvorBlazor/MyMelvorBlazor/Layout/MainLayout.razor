@inherits LayoutComponentBase

<CascadingValue Value="this">
<div class="page">
    <div class="sidebar">
            <NavMenu ThingToUpdateMenu="@toUpdateNavMenu" />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
</CascadingValue>

@code {
    private int toUpdateNavMenu = 0;

    public void UpdateMenu()
    {
        toUpdateNavMenu = DateTime.Now.Millisecond;
        StateHasChanged();
    }
}