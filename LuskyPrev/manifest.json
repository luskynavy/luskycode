{
  "manifest_version": 2,

  "name": "Prev Page",
  "description": "Displays the previous page by incrementing or decrementing the last number in URL.",
  "version": "1.0",
  
  "applications": {
    "gecko": {
      "id": "prevpage@lusky.com"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
 
  "browser_action": {
    "default_icon": "icon48.png"
  },

  "options_ui": {
	"page": "settings/options.html",
	"open_in_tab": false,
	"browser_style": true
  },

  "permissions": [
	"activeTab",
	"storage",
	"<all_urls>"
  ]
}