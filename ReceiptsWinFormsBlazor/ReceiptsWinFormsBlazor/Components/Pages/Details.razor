@page "/details/{ProductId:int}"
@* @rendermode InteractiveServer *@
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<ReceiptsContext> DbFactory

<h3>Détails</h3>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Aucun produit avec cet id n'existe.</div>
}
else
{
    @if (Product is null || Loading)
    {
        <div class="alert alert-info">Chargement...</div>
    }
    else
    {
        <dl class="row">
            <dt class = "col-sm-2">
                Groupe
            </dt>
            <dd class = "col-sm-10">
                @Product.Group
            </dd>
            <dt class="col-sm-2">
                Nom
            </dt>
            <dd class="col-sm-10">
                @Product.Name
            </dd>
            <dt class="col-sm-2">
                Prix
            </dt>
            <dd class="col-sm-10">
                @Product.Price
            </dd>
            <dt class="col-sm-2">
                Date de réception
            </dt>
            <dd class="col-sm-10">
                @Product.DateReceipt.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Nom de la source
            </dt>
            <dd class="col-sm-10">
                @Product.SourceName
            </dd>
            <dt class="col-sm-2">
                Ligne de la source
            </dt>
            <dd class="col-sm-10">
                @Product.SourceLine
            </dd>
            <dt class="col-sm-2">
                Données complétes
            </dt>
            <dd class="col-sm-10">
                @Product.FullData
            </dd>
        </dl>

        <ProductPrices ProductId="@Product.Id" />
    }
}

@code {

    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of product.
    [Parameter]
    public int ProductId { get; set; }

    // Product entity.
    private Product? Product { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {

        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        Product = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.Products is not null)
        {
            Product = await context.Products
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    c => c.Id == ProductId);

            if (Product is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

}
